<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectLanguageActivity">

    <LinearLayout
        android:id="@+id/linearFirstId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogoId"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Please select your language"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnEnglishId"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/capsul_blue_btn"
            android:text="English"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/btnMalaysiaId"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/capsul_blue_border_btn"
            android:text="Bahasa Malaysia"
            android:textColor="@color/blue" />


        <Button
            android:id="@+id/btnChinaId"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/capsul_blue_border_btn"
            android:text="China"
            android:textColor="@color/blue" />


        <Button
            android:id="@+id/btnOtherId"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/capsul_blue_border_btn"
            android:text="Other"
            android:textColor="@color/blue" />


    </LinearLayout>

</RelativeLayout>
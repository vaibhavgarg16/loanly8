<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">
    <TextView
        android:id="@+id/txtAboutId"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="23sp"
        android:text="About us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/viewId"
        android:layout_marginVertical="15dp"
        android:background="@color/black"
        android:layout_below="@+id/txtAboutId"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/txtDescId"
        android:layout_below="@+id/viewId"
        android:layout_marginHorizontal="10dp"
        android:text="Loanly android application is a type of applicaltion that is use to give loan to the user, and provide all type of loan facility to the user. Loanly android application is a type of applicaltion that is use to give loan to the user, and provide all type of loan facility to the user."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>